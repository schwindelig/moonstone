@model Guid?

@{
    string selectorName = Html.NameFor(m => m).ToString();
}

<div class="ui selection dropdown ms-dropdown-category" id="@selectorName">
    @Html.HiddenFor(m => m)
    <div class="default text">Please choose...</div>
    <i class="dropdown icon"></i>
    <div class="menu">
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        bindDropdown('#@selectorName', 'api-get-bankaccounts-for-current-group');
    });
</script>